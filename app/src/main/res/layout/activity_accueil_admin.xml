<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagedeconnexion"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >

    <LinearLayout
        android:padding="10dp"
        android:background="#B8CFCFBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="34sp">

        </TextView>

        <Button
        android:layout_gravity="center"
        android:id="@+id/festival"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Festival">

    </Button>

    <Button
        android:layout_gravity="center"
        android:id="@+id/concourEtquestion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Concours et Question">

    </Button>

    <Button
        android:layout_gravity="center"
        android:id="@+id/adherent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Adherent">

    </Button>

    <Button
        android:layout_gravity="center"
        android:id="@+id/ClassementFin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Concours fini">

    </Button>

        <Button
            android:layout_gravity="center"
            android:id="@+id/Statistique"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Statistiques Concours fini">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="#B8CFCFBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/changeMode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Vue Utilisateur"></Button>

        <Button
            android:id="@+id/deconnexion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Deconnexion">

        </Button>
    </LinearLayout>

</LinearLayout>